                                                <Setter Property="BorderThickness" TargetName="myBorder" Value="5,0,0,0"></Setter>
                                                <Setter Property="BorderBrush" TargetName="myBorder" Value="#FF52AEEE"></Setter>
                                                <Setter Property="Opacity" Value="1"></Setter>
